  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.6.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "jest": "^26.4.2",
